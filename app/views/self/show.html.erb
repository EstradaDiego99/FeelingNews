<section class="congresses-box">
  <% @posts.each do |post| %>
    <div class="congress-container">
      <div class="congress-information">
        <span id="congress-name"><%= post.texto %></span>
        <% if post.category %>
          <div class="icon-text-component">
            <img src="/icons/baseline-label_important-24px.svg"/>
            <span id="Fecha"><%= post.category %></span>
          </div>
        <% end %>
        <div class="icon-text-component">
          <img src="/icons/baseline-label_important-24px.svg"/>
          <span id="Lugar"><%= post.keyword %></span>
        </div>
      </div>
    </div>
  <% end %>
</section>
